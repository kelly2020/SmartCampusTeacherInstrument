<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/margin_6"
            android:layout_height="@dimen/margin_16"
            android:src="@drawable/shape_gradient_title_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_10"
            android:textSize="@dimen/font_normal_16"
            android:textColor="@color/color_6666"
            android:text="@string/teacher_trainment" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_career_develop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>